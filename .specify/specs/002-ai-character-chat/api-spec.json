            "description": "페이지당 결과 수",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20,
              "maximum": 100
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "페이지 오프셋",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 0
